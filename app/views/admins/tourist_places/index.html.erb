<p id="notice"><%= notice %></p>

<h1>Tourist Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Banner image</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>About place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tourist_places.each do |tourist_place| %>
      <tr>
        <td><%= tourist_place.name %></td>
        <td><%= tourist_place.city %></td>
        <td><%= tourist_place.state %></td>
        <td><%= tourist_place.country %></td>
        <td><%= image_tag tourist_place.banner_image_url %></td>
        <td><%= tourist_place.longitude %></td>
        <td><%= tourist_place.latitude %></td>
        <td><%= tourist_place.about_place %></td>
        <td><%= link_to 'Show',admins_tourist_place %></td>
        <td><%= link_to 'Edit', edit_admins_tourist_place_path(tourist_place) %></td>
        <td><%= link_to 'Destroy', admins_tourist_place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

