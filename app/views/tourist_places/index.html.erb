
<div class="container index-page">
  <div class="row"> 
    <p id="notice"><%= notice %></p>
    <div class="panel panel-default panel-table">
      <div class="panel-heading">
        <div class="row">
          <div class="col col-xs-6">
            <h3 class="panel-title">Tourist Places</h3>
          </div>
          <div class="col col-xs-6 text-right">
            <button type="button" class="btn btn-sm btn-primary btn-create"><%= link_to 'New Tourist Place', new_tourist_place_path %></button>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered table-list">
          <thead>
            <tr>
              <th class="hidden-xs">Name</th>
              <th>City</th>
              <th>State</th>
              <th>Country</th>
              <th>Banner image</th>
              <th>Longitude</th>
              <th>Latitude</th>
              <th>About place</th>
              <th><em class="fa fa-cog"></em>Actions</th>
            </tr> 
          </thead>
          <tbody>
            <% @tourist_places.each do |tourist_place| %>
              <tr>
                <td><%= tourist_place.name %></td>
                <td><%= tourist_place.city %></td>
                <td><%= tourist_place.state %></td>
                <td><%= tourist_place.country %></td>
                <td><%= image_tag tourist_place.banner_image_url, class: "img-responsive", style: "height:10%;" if tourist_place.banner_image.present? %>
                </td>
                <td><%= tourist_place.longitude %></td>
                <td><%= tourist_place.latitude %></td>
                <td><%= tourist_place.about_place %></td>
                  <td align="center" class="actions">
                  <%= link_to 'Edit', edit_tourist_place_path(tourist_place), class: "btn btn-default fa fa-pencil" %>
                  <%= link_to 'Show', tourist_place, class: "btn btn-default fa fa-eye" %>
                  <%= link_to 'Destroy', tourist_place,class: "btn btn-danger fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <%end%>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 
<style type="text/css">
  .btn-create a
  {
    color: #fff;
  }
  .actions
  {
    width: 33%;
  }
  .index-page
  {
    margin-left: 0%;
    width: 101%;
  }
</style>